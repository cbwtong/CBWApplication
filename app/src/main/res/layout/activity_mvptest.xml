<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <com.example.administrator.cbwapplication.widget.ClearEditText
        android:id="@+id/edit_unam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="#acabab"
        android:drawableLeft="@mipmap/login_user_new"
        android:drawablePadding="15dp"
        android:hint="请输入用户名"
        android:padding="15dp"
        android:textColorHint="#565656"/>

    <com.example.administrator.cbwapplication.widget.ClearEditText
        android:id="@+id/edit_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#acabab"
        android:drawableLeft="@mipmap/login_pwd_new"
        android:drawablePadding="15dp"
        android:hint="请输入密码"
        android:padding="15dp"
        android:textColorHint="#565656"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#b66666"
            android:gravity="center"
            android:padding="15dp"
            android:text="LOGIN"
            android:textColor="#565656"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#b66666"
            android:gravity="center"
            android:padding="15dp"
            android:text="CLEAR"
            android:textColor="#565656"
            android:textSize="25sp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/load_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:visibility="gone"/>

</LinearLayout>