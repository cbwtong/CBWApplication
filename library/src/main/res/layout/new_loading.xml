<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/loading_layout_shape">

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="@drawable/loading_layout_shape"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/search_place_loading_progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/search_place_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_place_loading_progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/xlistview_header_hint_loading"
            android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>
